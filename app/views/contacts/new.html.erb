<div class="container">
<div align="center">
    <div class="contact">
  <h5>Laissez moi un message</h5>

  <%= simple_form_for @contact, :url => contacts_path(@contact), :html => {:method => post}, :class => 'form-horizontal' do |f| %>
  
    <%= f.input :name, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :message, :as => :text, :required => true %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Envoyer', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>
</div>
</div>

